@using CameoMvc.Areas.MFG.Models;
@model M_MFG003

<div>
    <section class="content">
        @if (@Model.LIST_RM.Count > 0)
        {
            if (Model.PHON)
            {
                <div class="row">
                    @foreach (var item in Model.LIST_RM)
                    {
                        //var cardStyle = (item.TYPE_NAME == MFG003.Insert) ? "card card-outline card-dark collapsed-card" : "card card-outline card-info collapsed-card";
                        <div id="divCard" class="card card-outline card-dark collapsed-card">
                            <div class="card-header">
                                <h5 class="card-title">@item.TYPE_NAME&nbsp;【@item.TYPE_NAME】</h5>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="收合">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>                                
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">新增</div>
                                    <div class="col">大類名稱：@item.TYPE_NAME</div>
                                    <div class="col">小類名稱：@item.ITEM_NAME</div>
                                    <div class="col">異動人員：@item.UPDATE_USERID</div>
                                    <div class="col">異動時間：@item.UPDATE_TIME</div>
                                </div>
                                {
                                <div class="row">
                                    <div class="col">刪除</div>
                                    <div class="col">大類名稱：@item.TYPE_NAME</div>
                                    <div class="col">小類名稱：@item.ITEM_NAME</div>
                                    <div class="col">異動人員：@item.UPDATE_USERID</div>
                                    <div class="col">異動時間：@item.UPDATE_TIME</div>
                                </div>
                                }
                            </div>
                        </div>
                     }
                </div>
            }
            else
            {
                <div class="container-fluid table-responsive-sm" style="overflow: auto; height:300px;">
                    <table class='table table-bordered table-hover table-striped'>
                        <thead class="thead-dark">
                            <tr>
                                <th nowrap="nowrap" style="text-align:center;">刪除</th>
                                <th nowrap="nowrap" style="text-align:center;">大類名稱</th>
                                <th nowrap="nowrap" style="text-align:center;">小類名稱</th>
                                <th nowrap="nowrap" style="text-align:center;">異動人員</th>
                                <th nowrap="nowrap" style="text-align:center;">異動時間</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LIST_RM)
                            {
                                <tr class="table-light">
                                    <td nowrap="nowrap" style="text-align:center;" Class="DelRow">
                                        <button id="btnSel" name="button" type="submit" class="btn btn-sm btn-danger" value="DelRow|@item.TYPE_NAME|@item.ITEM_NAME">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </td>
                                    <td nowrap="nowrap" style="text-align:center;">@item.TYPE_NAME</td>
                                    <td nowrap="nowrap" style="text-align:center;">@item.ITEM_NAME</td>
                                    <td nowrap="nowrap" style="text-align:center;">@item.UPDATE_USERID</td>
                                    <td nowrap="nowrap" style="text-align:center;">@item.UPDATE_TIME</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        }
        else
        {
            <div class="pager">
                <table>
                    <tr class="GridEmptyRowStyle">
                        <td>無資料</td>
                    </tr>
                </table>
            </div>
        }
    </section>
</div>

