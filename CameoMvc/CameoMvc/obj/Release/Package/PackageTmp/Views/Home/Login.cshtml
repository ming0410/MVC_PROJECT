@using CameoMvc.Models;
@model M_Login
@{
    Layout = null;
    ViewBag.Title = "Login";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Demo MES System</title>
    <!-- 正式環境 -->
    <link rel="icon" href="~/images/Demo.png" type="image/x-icon" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">

    <link href="~/Content/login-form/css/style.css" rel="stylesheet" />
    <style type="text/css">
        h1 {
            text-shadow: 3px 2px rgba(255, 255, 255, 0.712);
        }

        footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            color: white;
            background-color: hsl(202,52%,49%);
            clear: left;
            text-align: center;
        }

        body {
            background-color: hsl(203,52%,95%);
        }

        footer {
            display: inline;
        }
    </style>
</head>
<body>
    <div class="login">

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-error">
                <a class="close" data-dismiss="alert" href="#">×</a>
                @Html.ValidationSummary()
            </div>
        }

        <div class="login-screen">
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken();
                <div class="login-form">
                    <div class="control-group">
                        &nbsp; &nbsp;
                        @*<img src="~/images/TestSign.png" width="110" height="110" style="transform: rotate(-10deg);">*@
                        <img src="~/images/Demo.png" width="110" height="110">
                    </div>
                    <div class="control-group">
                        使用者帳號：@Html.TextBoxFor(m => m.User, new { @placeholder = "使用者帳號", @class = "login-field", @autocomplete = "off", @required = "", @autofocus = "" })
                        <label class="login-field-icon fui-user" for="User"></label>
                    </div>
                    <div class="control-group">
                        使用者密碼：@Html.PasswordFor(m => m.Password, new { @placeholder = "使用者密碼", @class = "login -field", @autocomplete = "off", @required = "" })
                        <label class="login-field-icon fui-lock" for="Password"></label>
                    </div>

                    <div class="control-group">
                        <button type="submit" value="登入" class="btn btn-primary">登入</button>
                    </div>
                </div>
            }
        </div>
    </div>
    <footer>
        <strong>Copyright &copy; 2020 <a href="#">Demo MES System</a>.</strong> All rights reserved.
    </footer>
</body>
</html>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.cookie.js"></script>
<script src="~/Scripts/jquery-3.2.1.slim.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script type="text/javascript">
    $(function () {
        $('input:text:first').focus();
        var $inp = $('input:text');
        $inp.bind('keydown', function (e) {
            //var key = (e.keyCode ? e.keyCode : e.charCode);
            var key = e.which;
            if (key == 13) {
                e.preventDefault();
                var nxtIdx = $inp.index(this) + 1;
                $(":input:text:eq(" + nxtIdx + ")").focus();
            }
        });
    });
</script>

